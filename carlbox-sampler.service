[Unit]
Description=CarlBox Sampler + Web UI
After=network.target sound.target

[Service]
Type=simple
WorkingDirectory=/usr/src/carlbox-sampler
Environment=XDG_RUNTIME_DIR=/run/user/0
ExecStart=/usr/src/carlbox-sampler/venv/bin/python run.py
Restart=on-failure
RestartSec=3
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
